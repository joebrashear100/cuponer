# FURG Backend Environment Variables
# Copy this file to .env and fill in your values

# ==================== SERVER ====================
PORT=8000
DEBUG=true
LOG_LEVEL=info

# ==================== DATABASE ====================
DATABASE_URL=postgresql://frugal:warfare_ai_2024@localhost:5432/frugal_ai

# ==================== AUTHENTICATION ====================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars

# Sign in with Apple
APPLE_CLIENT_ID=com.furg.app
APPLE_TEAM_ID=YOUR_TEAM_ID

# ==================== AI MODELS ====================
# Anthropic (Claude) - For serious financial advice
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# xAI (Grok) - For roasting and casual chat
# Get your key at: https://console.x.ai/
XAI_API_KEY=xai-your-api-key-here

# Google (Gemini) - For routing and categorization
# Get your key at: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-google-api-key-here

# ==================== OPENAI (Shopping Assistant) ====================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==================== PLAID ====================
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox  # sandbox, development, or production

# ==================== RATE LIMITING ====================
MAX_REQUESTS_PER_MINUTE=10
MAX_TOKENS_PER_DAY=100000
MAX_COST_PER_DAY=5.0

# ==================== MULTI-MODEL CHAT ====================
# Enable intelligent model routing (Grok + Claude + Gemini)
# Set to false to use Claude-only mode
USE_MULTI_MODEL_CHAT=true

# ==================== REDIS (Optional - for production) ====================
# REDIS_URL=redis://localhost:6379

# ==================== SENTRY (Optional - for error tracking) ====================
# SENTRY_DSN=https://your-sentry-dsn

# ==================== DEPLOYMENT ====================
# For Fly.io or other cloud deployments
# FLY_APP_NAME=furg-api
# FLY_REGION=sjc
