<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Furg</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>$(PRODUCT_BUNDLE_PACKAGE_TYPE)</string>
	<key>CFBundleShortVersionString</key>
	<string>1.3</string>
	<key>CFBundleVersion</key>
	<string>4</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UIApplicationSceneManifest</key>
	<dict>
		<key>UIApplicationSupportsMultipleScenes</key>
		<true/>
	</dict>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>UILaunchScreen</key>
	<dict/>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- App Transport Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<!-- Allow localhost in debug builds -->
		<key>NSAllowsLocalNetworking</key>
		<true/>
		<!-- For production, remove this and use HTTPS only -->
		<key>NSAllowsArbitraryLoads</key>
		<true/>
	</dict>

	<!-- Sign in with Apple -->
	<key>NSAppleEventsUsageDescription</key>
	<string>Sign in with your Apple ID to use Furg</string>

	<!-- Reminders Access for financial reminders -->
	<key>NSRemindersFullAccessUsageDescription</key>
	<string>Furg uses Reminders to help you track bill due dates, subscription renewals, and savings goals.</string>

	<!-- Camera Access for receipt scanning -->
	<key>NSCameraUsageDescription</key>
	<string>Furg uses your camera to scan receipts and automatically track expenses.</string>

	<!-- Photo Library Access for receipt images -->
	<key>NSPhotoLibraryUsageDescription</key>
	<string>Furg uses your photo library to import receipt images for expense tracking.</string>

	<!-- Location Access for nearby offers -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Furg uses your location to show you nearby deals and offers.</string>

	<!-- Face ID / Touch ID for secure access -->
	<key>NSFaceIDUsageDescription</key>
	<string>Furg uses Face ID to securely protect your financial data.</string>

	<!-- FinanceKit Access -->
	<key>NSFinancialDataUsageDescription</key>
	<string>Furg uses FinanceKit to access your Apple Card, Apple Cash, and Apple Savings data for a complete financial picture.</string>
</dict>
</plist>
